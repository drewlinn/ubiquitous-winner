<h1>All Restaurants</h1>
@if(@Model.Count == 0)
{
  <h3>You have not added any Restaurants</h3>
}
@foreach(var restaurant in Model)
{
  <ul>
    <li><a href="/restaurants/@restaurant.GetId()">@restaurant.GetName()</a> | <a href="/restaurant/edit/@restaurant.GetId()">Edit</a> | <a href="/restaurant/delete/@restaurant.GetId()">Delete</a></li>
  </ul>
}
<p><a href="/restaurant/new">Add a new Restaurant</a></p>
<form action="/restaurants/cleared" method="post">
    <button type="submit">Clear all restaurants</button>
</form>
<p><a href="/">Return Home</a></p>
