<h2>@Model["cuisine"].GetName(). </h2>
<h4>Menu: @Model["cuisine"].GetMenu()</h4>
@if(@Model["restaurants"].Count == 0)
{
  <p>There are no restaurants</p>
}
else
{
  <ol>
    @foreach (var restaurant in @Model["restaurants"])
    {
      <li><a href="/restaurants/@restaurant.GetId()">@restaurant.GetName()</li>
    }
  </ol>

}

<p><a href="/cuisines">View all cuisines</a></p>
<p><a href="/cuisine/new">Add a new cuisine</a></p>
<p><a href="/">Return home</a></p>
